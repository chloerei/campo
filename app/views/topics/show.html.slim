.ui.stacked.segment
  .ui.breadcrumb
    a.section href=topics_path Topics
    .divider
      | /

  #topic
    = render partial: 'title', locals: { topic: @topic }
    .ui.comments.posts
      = render @topic.posts.order(id: :asc)
      - if logined?
        = render partial: 'posts/form', locals: { post: @topic.posts.new }
      - else
        .comment
          .avatar
          .content
            a.ui.button href=login_path(return_to: url_for) Login to Reply
